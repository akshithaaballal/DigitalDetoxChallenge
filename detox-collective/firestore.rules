rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: user can read/write their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Groups: members can read group details; only authenticated users can create
    match /groups/{groupId} {
      allow read: if request.auth != null && (request.auth.uid in resource.data.members || true); // TODO tighten
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid in resource.data.members);
    }

    // Group chats: members can add messages
    match /groupChats/{chatId} {
      allow read: if request.auth != null;
      match /messages/{messageId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null;
      }
    }

    // Badges and sessions: authenticated access only
    match /badges/{badgeId} { allow read, write: if request.auth != null; }
    match /detoxSessions/{sessionId} { allow read, write: if request.auth != null; }

    // Default deny
    match /{document=**} { allow read, write: if false; }
  }
}
